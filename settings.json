{
  "files.autoSave": "afterDelay",
  "editor.tabSize": 2,
  "window.zoomLevel": 0,
  "latex-workshop.view.pdf.viewer": "browser",
  "[latex]": {
    "editor.defaultFormatter": "James-Yu.latex-workshop"
  },
  "editor.wordWrap": "on",
  "python.jediEnabled": false,
  "npm.enableScriptExplorer": true,
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "'CaskaydiaCove Nerd Font','ubuntu Mono','consolas','fira code', monospace",
  "terminal.integrated.enableBell": true,
  "terminal.integrated.scrollback": 1e27,
  "workbench.activityBar.visible": true,
  "workbench.statusBar.visible": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "workbench.startupEditor": "welcomePage",
  "scm.alwaysShowActions": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "terminal.integrated.shell.linux": "/bin/zsh",
  "dart.flutterSdkPath": "/home/kreetiuser/flutter",
  "editor.rulers": [80, 98, 120],
  "terminal.integrated.rendererType": "dom",
  "editor.fontLigatures": true,
  // "editor.fontLigatures": "'ss01','ss03', 'ss06'",
  "gitlens.currentLine.scrollable": false,
  "files.associations": {
    "*.html.eex": "html",
    "*.erb": "erb",
    "*.html.erb": "html"
  },
  "emmet.includeLanguages": {
    "HTML (Eex)": "html"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "ionic-preview.host": "localhost",
  "ionic-preview.port": 8100,
  "editor.minimap.maxColumn": 80,

  // font settings for firaflott

  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment",
          "entity.name.type.class", //class names
          "keyword", //import, export, return…
          "constant", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type.class.js" //class keyword
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },

  // settings for material gecko

  "editor.lineHeight": 20,
  "editor.letterSpacing": 0.5,
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "editor.fontWeight": "400",

  /////////////////////////////////////////////////////////////////////////////////
  // "editor.cursorStyle": "line",
  // "editor.cursorWidth": 5,
  // "editor.cursorBlinking": "solid",
  // Very important: Install this plugin: https://github.com/be5invis/vscode-custom-css
  "vscode_custom_css.imports": ["file:///home/supriyo.vscodestyles.css"],
  "vscode_custom_css.policy": true,
  "editor.renderWhitespace": "all",

  ///////////////////////////////////////////////////////////////////////////////
  "workbench.colorCustomizations": {
    // "statusBar.background" : "#120118",
    // "statusBar.noFolderBackground" : "#09c4d1",
    "statusBar.debuggingBackground": "#a10f0f",
    "statusBar.debuggingForeground": "#d6d6d6",
    //"statusBar.foreground": "#ffffff",
    // "tab.activeBackground": "#000000",
    // "tab.activeForeground": "#ffffff",
    //"tab.inactiveForeground": "#5b7976"
    "editorLineNumber.foreground": "#978d8d",
    "editor.foldBackground": "#355000"
  },
  "editor.largeFileOptimizations": false,
  // "terminal.integrated.inheritEnv": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "python.condaPath": "~/anaconda3/bin/python",
  "[python, json]": {
    "editor.tabSize": 4
  },
  "editor.fontSize": 14,
  "editor.fontFamily": "'CaskaydiaCove Nerd Font','FiraFlott','fira code','Rec mono Duotone','Code New Roman','Operator Mono SSm Lig Medium','Dank Mono','CamingoCode','iA Writer mono S','source code pro','Victor Mono','Lekton','Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  "code-runner.runInTerminal": true,
  "[java]": {
    "editor.defaultFormatter": "redhat.java"
  },
  "java.configuration.checkProjectSettingsExclusions": false,
  "[html,css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // "[html]": {
  //   "editor.defaultFormatter": "vscode.html-language-features"
  // },
  "ruby.format": "rubocop",
  "ruby.intellisense": "rubyLocate",

  "ruby.lint": {
    "rubocop": {
      "ruby.useBundler": true
    }
  },
  "[ruby]": {
    "editor.defaultFormatter": "rebornix.ruby"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "java.semanticHighlighting.enabled": true,
  "java.requirements.JDK11Warning": false,
  "editor.renameOnType": true,
  "workbench.iconTheme": "material-icon-theme",
  "window.titleBarStyle": "custom",
  "editor.mouseWheelZoom": true,
  "debug.console.fontFamily": "'operator mono lig'",
  "git.allowForcePush": true,
  "emulator.emulatorPath": "~/Android/Sdk/emulator",
  "files.exclude": {
    "**/.git": false
  },
  "terminal.integrated.experimentalTextureCachingStrategy": "dynamic",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "python.languageServer": "Microsoft",
  "python.insidersChannel": "off",
  // "terminal.integrated.inheritEnv": false
  "python.dataScience.textOutputLimit": 0,
  "python.defaultInterpreterPath": "/home/supriyo/anaconda3/bin/python",
  "workbench.colorTheme": "Monokai Pro (Filter Spectrum)",
  "kite.showWelcomeNotificationOnStartup": false,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
